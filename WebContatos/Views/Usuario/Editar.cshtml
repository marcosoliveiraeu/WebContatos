@using WebContatos.Enums
@model UsuarioModel 
@{
    ViewData["Title"] = "Editar Usuario";
}
<div class="text-center">

    <h1 class="display-4">Editar Usuário</h1>

</div>


<form asp-controller="Usuario" asp-action="Alterar" method="post">

    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label for="inputNome" class="form-label">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" id="inputNome" placeholder="Digite o nome do Usuário.">
         @Html.ValidationMessageFor(x => x.Nome)

    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" asp-for="Email" class="form-control" id="email" placeholder="Digite o email do Usuário.">
         @Html.ValidationMessageFor(x => x.Email)

    </div>

    <div class="mb-3">
        <label for="perfil" class="form-label">Perfil</label>
        <select asp-for="Perfil" class="form-control">
            <option value="0">Selecion</option>
            <option value="@PerfilEnum.Admin">Administrador</option>
            <option value="@PerfilEnum.Padrao">Padrão</option>
        </select>
        @Html.ValidationMessageFor(x => x.Perfil)

    </div>


    <div class="mb-3">
        <label for="login" class="form-label">Login</label>
        <input type="text" asp-for="Login" class="form-control" id="login" placeholder="Digite o login do Usuário.">
        @Html.ValidationMessageFor(x => x.Login)
    </div>

    <div class="mb-3">
        <label for="senha" class="form-label">Senha</label>
        <input type="text" asp-for="Senha" class="form-control" id="senha" placeholder="Digite a senha do Usuário.">
        @Html.ValidationMessageFor(x => x.Senha)
    </div>


    <button type="submit" class="btn btn-primary">Alterar</button>
    <a class="btn btn-secondary" asp-controller="Usuario" asp-action="Index" role="button">Voltar</a>
</form>